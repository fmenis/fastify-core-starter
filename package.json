{
  "name": "fastify-core-starter",
  "version": "0.4.0",
  "description": "Base Fastify setup for Node.js applications",
  "keywords": [
    "fastify",
    "boilerplate"
  ],
  "license": "ISC",
  "author": "filippomeniswork@gmail.com",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node --env-file .env dist/server.js",
    "dev": "tsx watch --env-file .env --inspect src/server.ts",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier . --write",
    "initStack": "cd ./local-stack && docker compose up -d",
    "shutdownStack": "cd ./local-stack && docker compose down",
    "rebuildStack": "./local-stack/rebuild-db.sh",
    "prepare": "husky",
    "prismaStudio": "prisma studio --config ./prisma.config.ts"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@joggr/fastify-prisma": "^6.0.1",
    "@prisma/client": "^6.19.0",
    "@sentry/node": "^10.27.0",
    "@sinclair/typebox": "^0.34.41",
    "ajv-formats": "^3.0.1",
    "bullmq": "^5.64.1",
    "close-with-grace": "^2.3.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.16.3",
    "postgrator": "^8.0.0",
    "rimraf": "^6.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "fastify-tsconfig": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "lint-staged": {
    "*.src/**/*.{ts,tsx}": [
      "eslint --max-warnings=0 --fix"
    ]
  }
}
